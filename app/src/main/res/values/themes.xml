<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AgendaDeContatosKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorSecondary">@color/purple</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AgendaDeContatosKotlin" parent="Base.Theme.AgendaDeContatosKotlin" />

    <style name="EditTextForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ButtonForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextViewForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>